{{#if true}}
  <div
    id="create-group-form-container"
    style="display: none; margin-bottom: 40px; border: 1px solid #ccc; padding: 18px; padding-bottom: 0; background-color: #d1f0ff;"
  >
    <b>Create a new group</b>
    <form action="/category/group" method="post">
      <input type="hidden" id="create-group-form-hidden-csrf" name="authenticity_token" value="">
      <input type="hidden" name="text_color" value="000000">
      <input type="hidden" class="ember-text-field" style="padding: 5px;" name="color" value="0000ff" placeholder="Color">

      <input class="ember-text-field" style="padding: 5px;" name="name" value="" placeholder="Group name">
      
      <button
        type="submit"
        class="btn btn-primary create"
        style="margin-top: 10px;"
      >Create</button>
    </form>
  </div>
  <script>
    // Only show on a particular page
    // Ember does partial renders, so this isn't sufficient.
    // Need to either keep checking, or hook into Ember route
    // changes, etc.
    window.setInterval(function() {
      if (window.location.pathname === '/c/groups') {
        var csrf = $('meta[name="csrf-token"]').attr('content');
        $('#create-group-form-hidden-csrf').val(csrf);
        $('#create-group-form-container').slideDown();
      }
    }, 1000);
  </script>
{{/if}}